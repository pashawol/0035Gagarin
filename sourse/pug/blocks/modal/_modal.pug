mixin modHotelItem(data)
	+e.item
		.text-center.d-xl-none.d-xl-none
			+e.name=data.name
			+e.price=data.price
		+e.row.row.align-items-center
			.col-xl-6
				+sPlaceSlider()
			+e.txt-col.col-xl-6
				+e.name.d-none.d-xl-block=data.name
				+e.price.d-none.d-xl-block=data.price
				+e.list-wrap(class=`${data.listClasses}`)
					ul
						block
				+e.btn-cont.text-center.text-xl-start
					+e.armor-btn.link-modal-js(href='#modal-reserve') Забронировать
			
