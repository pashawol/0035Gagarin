mixin sBlog(data)
	// start sBlog
	+b.SECTION.sBlog.section#sBlog&attributes(attributes)
		+b.bg-txt.d-none.d-lg-block
			img(loading="lazy" src=`img/svg/sBlog-txt.svg` alt="")
		.container
			+b.section-title.text-center(class="wow  animate__fadeIn  " )
				h2 Блог
			+e.slider-wrap(class="wow  animate__fadeIn  " )
				.swiper-container.sBlog-slider-js
					.swiper-wrapper
						- for(var i = 0; i < 10; i++)
							.swiper-slide
								+sBlogItem({
									name: 'Фотоотчет',
								})
					.swiper-pagination
					+e.arrow-cont
						+arrow()
	// end sBlog

mixin sBlogItem(data)
	+b.sBlogitem(href='#' class=`${data.addClass || ''}`)
		+e.DIV.img()
			img(loading="lazy" src=`img/@2x/blog-${data.imgNum || 1}.jpg` alt="")
		+e.DIV.content
			if data.name
				+e.DIV.name=data.name
			+e.DIV.title=`${data.title || 'Кайтсерфинг в Крыму в октябре'}`
			+e.DIV.descr
				if block
					block
				else
					| Кайтсерфинг в Крыму в октябре 2020 года Будет ли работать кайт школа Гагарин кайт в Межводном в октябре?
			+e.DIV.date 22 февраля 2021
			if data.readMore
				+e.read-more(type="button") Подробнее