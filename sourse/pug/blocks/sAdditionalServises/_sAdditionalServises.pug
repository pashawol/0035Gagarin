mixin sAddItem(imgNum, price)
	+e.item(class="wow  animate__fadeIn  " )
		+e.row.row.align-items-center
			.col-auto
				+e.img
					img(loading="lazy" src=`img/svg/add-sv-${imgNum}.svg` alt="")
			.col
				+e.sub-row.row.align-items-center
					+e.descr.col-lg
						block
					+e.price.col-lg-auto=price