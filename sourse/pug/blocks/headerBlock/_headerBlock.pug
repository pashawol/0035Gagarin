mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock(class="wow  animate__fadeIn  " )&attributes(attributes)
		video#bgvid.fillItUp.video(playsinline='playsinline' poster="img/@2x/poster.jpg" autoplay='autoplay' muted='muted' loop='loop')
			
			source(src='short_video3.mp4' type='video/mp4' loading='lazy')

		.container
			+e.top-text Сезон 2021&nbsp;&mdash; с&nbsp;1&nbsp;мая по&nbsp;31&nbsp;октября
			h1 Кайтсерфинг в&nbsp;Крыму
			div
				+e.row.row
					mixin item(i,t)
						+e.col.col-lg-auto.col-md-4
							+e.img-wrap
								img(src=`img/svg/head-i-${i}.svg`, alt="")
							+e.title= t
					+item(`1`,`Проживание, еда и досуг`)
					+item(`2`,`Обучение от профессиональных инструкторов`)
					+item(`3`,`Аренда кайт снаряжения`)
			div
			+e.btn(href="#modal-qwiz").link-modal-js Записаться на обучение
		+e.footer.d-none.d-md-block
			+e.bottom.scroll-link(href="#sAbout") Листайте вниз
				br
				+icon("chevron-down")
	// end headerBlock